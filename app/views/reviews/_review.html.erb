<div class="content_post" >
  <div class="content_title">
    <%= review.title %>
  </div>
  <div class="content_text">
    <%=review.text %>
  </div>
   
   <div class="more">
      <ul class="more_list">
      <li>
        <%= link_to '詳細', review_path(review.id), method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == review.user_id %>
      <li>
        <%= link_to '編集', review_path(review.id), method: :get %>
      </li>
      <li>
        <%= link_to '削除', review_path(review.id), method: :get %>
      </li>
      <% end %>
      </ul>
   </div>
</div>

