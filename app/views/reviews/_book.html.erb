<div class="content_footer">
    <div class="book_mark">
          <% if current_user.liked_by?(review.id) %>
            <%= link_to destroy_book_path(review), class: "like-link", method: :DELETE, remote: true do %> 
              <i class="fa fa-heart unlike-btn"></i>
            <% end %>
            <%= review.books.count %>
          <% else %>
            <%= link_to create_book_path(review), class: "like-link", method: :POST, remote: true do %>
              <i class="fa fa-heart like-btn"></i>
            <% end %>
            <%= review.books.count %>
          <% end %>
    </div>
    <div class="more">
      <%= link_to 'Show Review', review_path(review.id), method: :get %>
    </div>
</div>
