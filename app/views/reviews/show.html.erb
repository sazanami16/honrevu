<div class="contents row">
  <div class="content_post">
    <div class="content_image">
       <%= image_tag(@review.image, class: "item-img") %>
    </div>
    <div class="content_header">
     <span>評価：</span>
       <div id="star-rate<%= @review.id%>"></div>    
          <script>
            $('#star-rate<%= @review.id%>').raty({
              size      : 36,
              starOff   : '<%= asset_path('star-off.png') %>',
              starOn    : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half      : true,
              readOnly: true,
              score: <%= @review.rating %>,
            });
            $('#star-rate<%= @review.id%>').css('padding', '10px');
          </script>
        <span>ジャンル：</span>
        <div class="content_genre">
          <%= @review.genre.name %>
        </div>
        <span>タイトル：</span>
        <div class="content_title">
          <%= @review.title %>
        </div>
    </div>
    <span>レビュー：</span>
    <div class="content_text">
       <%= @review.text %>
    </div>
    <div class="more">
      <div class="more_list">
      <% if user_signed_in? && current_user.id == @review.user.id %>
        <%= link_to 'Edit', edit_review_path(@review.id), method: :get %>
        <%= link_to 'Deleate', review_path(@review.id), method: :delete %>
      <% end %>
      </div>
    </div>
   </div>
   <div class="container">
    <% if current_user %>
      <%= form_with(model: [@review, @comment], local:true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする" %>
        <%= form.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※ コメントの投稿には新規登録/ログインが必要です</p></strong>
    <% end %>
    <div class="comments">
      <h4>コメント一覧</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <div class="comment_subject">
            <div class="comment_name">
            <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %></strong>
            </div>
            <div class="comment_text">
            <%= comment.text %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
