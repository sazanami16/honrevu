<div class="contents row"> 
    <div class="form-wrap">
        <h2 class="page-heading">ログイン</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="form-group">
            <div class="form-login">メールアドレス</div>
              <div class="form-text-wrap">  
                <%= f.email_field :email, class:"form-post" %>
              </div>
          </div>
          <div class="form-group">
            <div class="form-login">パスワード</div>
              <div class="form-text-wrap">  
                <%= f.password_field :password, autocomplete: "current-password", class:"form-post" %>
              </div>
          </div>
          <div class="submit">
            <%= f.submit "ログイン", class:"submit-btn" %>
          </div>
        <% end %>
    </div>
</div>
