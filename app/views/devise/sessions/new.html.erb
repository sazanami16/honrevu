 <div class="contents row"> 
  <div class="container">
    <div class="inner">
      <div class="form__wrapper">
        <h2 class="page-heading">ログイン</h2>
          <%= form_with model: @user, url: user_session_path, local: true do |f| %>
            <div class="field">
              <%= f.label :"メールアドレス" %><br />
              <%= f.email_field :email %>
            </div>

            <div class="field">
              <%= f.label :"パスワード" %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>

            <div class="actions">
              <%= f.submit "ログイン" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
