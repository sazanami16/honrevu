<!DOCTYPE html>
<html>
  <head>
    <title>HonRevu</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
  </head>

   <body>
    <header class="header">
      <div class="header_bar row">
        <h1 class="header-title"><a href="/">HonRevu</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav">
            <div class="user_info">
              <%= link_to current_user.name, "/users/#{current_user.id}" %>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
                  <%= link_to "投稿する", new_review_path, class: "post" %>
            </div>
          </div>
        <% else %>
          <div class="user_nav">
            <div class="user_info">
              <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "guest post" %>
              <%= link_to "ログイン", new_user_session_path, class: "post" %>
              <%= link_to "新規登録", new_user_registration_path, class: "post" %>
            </div>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright HonRevu 2021.
      </p>
    </footer> 
  </body>
</html>
